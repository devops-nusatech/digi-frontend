{
   "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "sourceMap": true,
      "sourceRoot": null,
      "rootDir": "src",
      "allowJs": false,
      "strict": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": false,
      "noUnusedLocals": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "types": ["node", "jest"],
      "typeRoots": ["./node_modules/@types"],
      "lib": [
         "dom",
         "dom.iterable",
         "es6",
         "scripthost",
         "webworker",
         "es5",
         "es7",
         "es2017"
      ],
      "skipLibCheck": true,
      "esModuleInterop": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react",
      "noImplicitAny": false,
      "isolatedModules": true,
      "baseUrl": "./src"
   },
   "include": ["./src/**/*", "./images.d.ts"],
   "exclude": [
      "node_modules",
      "public",
      "mocks",
      "__mocks__",
      "scripts",
      "spec",
      "jest.config.js",
      "webpack",
      "./src/*.test.*",
      "./src/charting_library"
   ]
}
